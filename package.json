{
  "name": "velper",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "release": "bumpp -r --commit \"chore: release v%s\" --push --tag && pnpm publish -r"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.39.6",
    "bumpp": "^9.1.1",
    "eslint": "^8.44.0",
    "lint-staged": "^13.2.3",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  }
}
